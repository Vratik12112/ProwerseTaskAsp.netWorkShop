@page
@model WbApp.Pages.Clients.Index3Model
@{
    ViewData["Title"] = "Vehicles Due for Service";
}
<h1 class="mt-4 mb-3">Vehicles Due for Service</h1>

 <p>Sorted by Service Due Date</p>

@if (Model.DueVehicles != null && Model.DueVehicles.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Vehicle ID</th>
                    <th>Make</th>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Service Due Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vehicle in Model.DueVehicles)
                {
                    <tr>
                        <td>@vehicle.VehicleId</td>
                        <td>@vehicle.Make</td>
                        <td>@vehicle.Model</td>
                        <td>@vehicle.Year</td>
                        <td>@vehicle.ServiceDueDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="mt-3">No vehicles due for service in the coming week.</p>
}
