@using WbApp.Pages.Clients;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WbApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WbApp.styles.css" asp-append-version="true" />

    <style>
        /* Custom styles for the navbar */
        .navbar-nav .nav-link {
            color: white;
            transition: background-color 0.3s, color 0.3s;
        }

            .navbar-nav .nav-link:hover {
                background-color: crimson !important;
                color: white !important;
            }
    </style>
</head>
<body>
    <header style="background-color: skyblue; padding-bottom: -50px;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <a class="navbar-brand" asp-area="" asp-page="/Index" style="color: blue;">Workshop</a>
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item navbar-text" style="color: red;">|</li>&nbsp;
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>&nbsp;
                        <li class="nav-item navbar-text" style="color: red;">|</li>&nbsp;
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Clients/Index">Customers List</a>
                        </li>&nbsp;
                        <li class="nav-item navbar-text" style="color: red;">|</li>&nbsp;
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Clients/Index1">Vehicles List</a>
                        </li>&nbsp;
                        <li class="nav-item navbar-text" style="color: red;">|</li>&nbsp;
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Clients/Index3">Due For Service</a>
                        </li>&nbsp;
                        <li class="nav-item navbar-text" style="color: red;">|</li>&nbsp;
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Clients/Index2">Book a slot</a>
                        </li>&nbsp;
                        <li class="nav-item navbar-text" style="color: red;">|</li>&nbsp;
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background-color: skyblue;" class="border-top footer text-muted">
        <div class="container" style="color: blue;">
            &copy; 2024 - WorkShop
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
